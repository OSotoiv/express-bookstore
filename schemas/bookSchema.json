{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "books",
    "type": "object",
    "properties": {
        "isbn": {
            "type": "string",
            "description": "International Standard Book Number (ISBN) of the book.",
            "pattern": "^[0-9]{10,13}$"
        },
        "amazon_url": {
            "type": "string",
            "description": "URL of the book's Amazon page.",
            "format": "uri"
        },
        "author": {
            "type": "string",
            "description": "Name of the book's author."
        },
        "language": {
            "type": "string",
            "description": "Language the book is written in."
        },
        "pages": {
            "type": "integer",
            "description": "Number of pages in the book.",
            "minimum": 1
        },
        "publisher": {
            "type": "string",
            "description": "Name of the book's publisher."
        },
        "title": {
            "type": "string",
            "description": "Title of the book."
        },
        "year": {
            "type": "integer",
            "description": "Year the book was published.",
            "minimum": 1
        }
    },
    "required": [
        "isbn",
        "author",
        "title"
    ],
    "additionalProperties": false
}